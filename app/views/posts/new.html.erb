<div class="form-container">
  <h2>New post!</h2>

  <%= form_with model: @post do |f| %>
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :body %>
      <%= f.text_area :body, rows: 20 %>
    </div>
    <%= f.submit "Post", class: "button" %>
  <% end %>
</div>